<!DOCTYPE html>
<html>
<head>
    <% include head %>
    <title><%= title %>-活动</title>
</head>
<body>
    <% include header %>
    <div class="row">
        <section class="columns small-12 medium-8 medium-centered">
            <h4>活动详情</h4>
            <div class="row">
                <!-- 活动描述 -->
                <section class="columns small-8">
                    <dl>
                        <dt>活动主题:</dt>
                        <dd><%= activity_data.theme %></dd>
                        <dt>活动时间:</dt>
                        <dd><%= activity_data.date %></dd>
                        <dt>活动地点:</dt>
                        <dd><%= activity_data.location %></dd>
                        <dt>组织者:</dt>
                        <dd><img src="/static/images/default_avator.jpg" alt="头像" class="avator-small"/><%= activity_data.organizer.nickname %></dd>
                        <dt>组织方联系方式:</dt>
                        <dd><%= activity_data.contacts %></dd>
                        <dt>活动内容:</dt>
                        <dd><%= activity_data.content %></dd>
                    </dl>
                </section>
                <!-- 活动描述结束 -->
                <section class="columns small-4">
                    <button class="button tiny">参加</button>
                </section>
            </div>

            <div class="row">
                <div class="columns">
                    <hr>
                    <dl>
                        <dt>参与者:</dt>
                        <dd><span class="stat"><%= activity_data.rel_user.length %></span>/<%= activity_data.pctp_num %></dd>
                    </dl>
                </div>
            </div>
            <div class="row small-up-3 medium-up-6">
                <% for(var i=0;i<activity_data.rel_user.length;i++) {%>
                <div class="column">
                    <img class="avator-small" src="/static/images/default_avator.jpg" alt=""/>
                    <h6><%= activity_data.rel_user[i].nickname %></h6>
                </div>
                <% }%>
            </div>
        </section>
    </div>
    <% include footer %>
    <% include script %>
</body>
</html>
