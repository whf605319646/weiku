<!DOCTYPE html>
<html>
<head>
    <% include head %>
    <title><%= title %>-活动</title>
</head>
<body>
    <% include header %>
    <div class="row">
        <section class="columns small-12 medium-8 medium-centered">
            <h4>活动详情</h4>
            <div class="row">
                <!-- 活动描述 -->
                <section class="columns small-8">
                    <dl>
                        <dt class="secondary label">活动主题:</dt>
                        <dd><%= activity_data.theme %></dd>
                        <br>
                        <dt>活动时间:</dt>
                        <dd><%= activity_data.date %></dd>
                        <br>
                        <dt class="secondary label">活动地点:</dt>
                        <dd><%= activity_data.location %></dd>
                        <br>
                        <dt class="secondary label">组织者:</dt>
                        <dd><img src="<%= activity_data.organizer.avator %>" alt="头像" class="avator-large"/>
                        <h6><a href="javascript:void(0)" class="default-blue"><%= activity_data.organizer.nickname %></a></h6></dd>
                        <br>
                        <dt class="secondary label">组织方联系方式:</dt>
                        <dd><%= activity_data.contacts %></dd>
                        <br>
                        <dt class="secondary label">活动内容:</dt>
                        <dd><%= activity_data.content %></dd>
                    </dl>
                </section>
                <!-- 活动描述结束 -->
                <section class="columns small-4">
                    <button class="button tiny join-btn">参加</button>
                    <h6 class="warning badge ptcp-tip hide"></h6>
                </section>
            </div>

            <div class="row">
                <div class="columns">
                    <hr>
                    <dl>
                        <dt>参与者:</dt>
                        <dd><span class="stat"><%= activity_data.rel_user.length %></span>/<%= activity_data.pctp_num %></dd>
                    </dl>
                </div>
            </div>
            <div class="row small-up-3 medium-up-6 ptcp-list">
                <% for(var i=0;i<activity_data.rel_user.length;i++) {%>
                <div class="column">
                    <img class="avator-small" src="<%= activity_data.rel_user[i].avator %>" alt="参与者"/>
                    <h6><% if (activity_data.rel_user[i].nickname) { %><%= activity_data.rel_user[i].nickname %><% } else {%> <%= activity_data.rel_user[i].uid %><%}%></h6>
                </div>
                <% }%>
            </div>
        </section>
    </div>
    <% include footer %>
    <% include script %>
    <script src="/static/js/activity.js"></script>
</body>
</html>
